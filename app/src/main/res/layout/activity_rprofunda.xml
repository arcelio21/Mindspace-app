<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".usecases.relajacion.RelajacionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!--- Fondo de pantalla -->
    <ImageView
        android:id="@+id/backgroundMenuImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/wrelajacion"
        android:scaleType="centerCrop" />

        <!--- Boton de atras -->
        <ImageButton
            android:id="@+id/Diario_Atras"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_back"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="22dp"
            app:tint="#000000">
        </ImageButton>

        <!--- Texto del titulo de la actividad -->
        <TextView
            android:id="@+id/NameTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Nombre_actividad"
            android:layout_marginLeft="105dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inter_semibold"
            />

        <!--- Texto de MindSpace -->
        <TextView
            android:id="@+id/NameAppR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Nombre_App"
            android:layout_marginLeft="155dp"
            android:textSize="17sp"
            android:textColor="#000000"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/inter_semibold"
            />

        <!--- Cuadro verde -->
        <FrameLayout
            android:layout_width="360dp"
            android:layout_height="400dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/shape_cartagreen"
            android:padding="16dp">

            <!--- Texto del titulo de la actividad -->
            <TextView
                android:id="@+id/TituloAct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/TextoTitulo"
                android:textSize="25sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/inter_black"
                />

            <!--- Texto del titulo de la actividad -->
            <TextView
                android:id="@+id/DescAct"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/DescAct"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/inter_regular"
                />

        </FrameLayout>

        <!--- Boton de ver video -->
        <Button
            android:id="@+id/buttonVideo"
            android:layout_width="360dp"
            android:layout_height="65dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="515dp"
            android:backgroundTint="#3E9427"
            android:fontFamily="@font/inter_bold"
            android:onClick="listenerBtn"
            android:text="Ver video Tutorial"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            app:cornerRadius="15dp"
            app:iconTint="#FDFCFC" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>