<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_items_notes"
    card_view:cardBackgroundColor="@null"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    card_view:contentPadding="4dp"
    android:layout_marginBottom="5sp">
    <!--
    items for a single row of RecyclerView
    -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemDiario_name"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:fontFamily="@font/inter_bold"
            android:textColor="#000"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemDiario_creationDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/inter_regular"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/itemDiario_lastUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/date_diario"
                android:textSize="13sp" />


        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>